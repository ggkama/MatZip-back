<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kh.matzip.notice.model.dao.NoticeMapper">

    <sql id="noticeSelect">
        SELECT
            N.NOTICE_NO      noticeNo,
            N.USER_NO        userNo,
            N.NOTICE_TITLE   noticeTitle,
            N.NOTICE_CONTENT noticeContent,
            N.CREATE_DATE    createDate,
            U.USER_ID        userNo,
            U.USER_NICKNAME  userNickname
        FROM
            TB_NOTICE N
        JOIN
            TB_USER   U
        ON
            U.USER_NO = N.USER_NO
    </sql>

    <select id="selectNoticeList"
            parameterType="map"
            resultType="com.kh.matzip.notice.model.dto.NoticeDTO">
        <include refid="noticeSelect"/>
        ORDER BY
            N.CREATE_DATE DESC
        OFFSET #{startIndex} ROWS FETCH NEXT #{size} ROWS ONLY
    </select>

    <select id="selectNoticeDetail"
            parameterType="long"
            resultType="com.kh.matzip.notice.model.dto.NoticeDTO">
        <include refid="noticeSelect"/>
        WHERE
            N.NOTICE_NO = #{noticeNo}
    </select>

    <select id="selectNoticeCount"
            parameterType="map"
            resultType="long">
        SELECT COUNT(*) FROM TB_NOTICE
    </select>

    <insert id="insertNotice"
            parameterType="com.kh.matzip.notice.model.vo.Notice">

        <selectKey keyProperty="noticeNo"
                   resultType="long"
                   order="BEFORE">
            SELECT SEQ_NOTICE_NO.NEXTVAL FROM DUAL
        </selectKey>

        INSERT INTO TB_NOTICE (
            NOTICE_NO,
            USER_NO,
            NOTICE_TITLE,
            NOTICE_CONTENT,
            CREATE_DATE
        ) VALUES (
            #{noticeNo},
            #{userNo},
            #{noticeTitle},
            #{noticeContent},
            SYSDATE
        )
    </insert>

    <update id="updateNotice"
            parameterType="com.kh.matzip.notice.model.vo.Notice">
        UPDATE TB_NOTICE
        SET
            NOTICE_TITLE   = #{noticeTitle},
            NOTICE_CONTENT = #{noticeContent}
        WHERE
            NOTICE_NO = #{noticeNo}
    </update>

    <delete id="deleteNotice"
            parameterType="long">
        DELETE FROM TB_NOTICE
        WHERE NOTICE_NO = #{noticeNo}
    </delete>

</mapper>
